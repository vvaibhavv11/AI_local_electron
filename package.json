{
  "name": "ai-local-electron",
  "private": true,
  "version": "0.0.0",
  "author": "vaibhav sharma <vvaibhavv3434@skiff.com>",
  "homepage": "",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev:react": "bunx --bun vite",
    "dev:electron": "pnpm transpile:electron; cross-env NODE_ENV=development electron .",
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "build": "bunx --bun vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "transpile:electron": "tsc --project src/electron/tsconfig.json",
    "dist:mac": "pnpm run transpile:electron && pnpm run build && electron-builder --mac --arm64",
    "dist:win": "pnpm run transpile:electron && pnpm run build && electron-builder --win --x64",
    "dist:linux": "pnpm run transpile:electron && pnpm run build && electron-builder --linux --x64"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.12",
    "lucide-react": "^0.479.0",
    "node-llama-cpp": "^3.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "react-scan": "^0.2.14",
    "react-syntax-highlighter": "^15.6.1",
    "tailwindcss": "^4.0.12",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^7.0.3",
    "electron": "^35.0.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0"
  },
  "build": {
    "appId": "com.AILocal.noob",
    "files": [
      "dist-electron",
      "dist-react",
      "!node_modules/node-llama-cpp/bins/**/*",
      "node_modules/node-llama-cpp/bins/${os}-${arch}*/**/*",
      "!node_modules/node-llama-cpp/llama/localBuilds/**/*",
      "node_modules/node-llama-cpp/llama/localBuilds/${os}-${arch}*/**/*",
      "!node_modules/@node-llama-cpp/*/bins/**/*",
      "node_modules/@node-llama-cpp/${os}-${arch}*/bins/**/*"
    ],
    "extraResources": [
      "./dist-electron/preload.cjs"
    ],
    "icon": "./2890573_ai_artificial intelligence_automaton_brain_electronics_icon.png",
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "pacman"
      ]
    },
    "win": {
      "target": [
        "portable",
        "msi"
      ]
    }
  }
}
